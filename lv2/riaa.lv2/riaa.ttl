@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .

<http://hifiberry.com/lv2/riaa>
	a lv2:Plugin ,
		lv2:FilterPlugin ;
	doap:name "RIAA Phono Preamp" ;
	doap:license <http://opensource.org/licenses/MIT> ;
	doap:maintainer [
		foaf:name "HiFiBerry" ;
		foaf:homepage <http://hifiberry.com>
	] ;
	lv2:project <http://hifiberry.com> ;
	lv2:optionalFeature lv2:hardRTCapable ;
	lv2:port [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 0 ;
		lv2:symbol "gain" ;
		lv2:name "Gain" ;
		lv2:default 0.0 ;
		lv2:minimum -40.0 ;
		lv2:maximum 40.0 ;
		units:unit units:db
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 1 ;
		lv2:symbol "subsonic" ;
		lv2:name "Subsonic Filter" ;
		lv2:default 0 ;
		lv2:minimum 0 ;
		lv2:maximum 2 ;
		lv2:portProperty lv2:integer ;
		lv2:scalePoint [
			rdfs:label "Off" ;
			rdf:value 0
		] , [
			rdfs:label "1st Order" ;
			rdf:value 1
		] , [
			rdfs:label "2nd Order" ;
			rdf:value 2
		]
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "riaa_enable" ;
		lv2:name "RIAA Enable" ;
		lv2:default 1 ;
		lv2:minimum 0 ;
		lv2:maximum 1 ;
		lv2:portProperty lv2:toggled
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 3 ;
		lv2:symbol "declick_enable" ;
		lv2:name "Declick Enable" ;
		lv2:default 0 ;
		lv2:minimum 0 ;
		lv2:maximum 1 ;
		lv2:portProperty lv2:toggled
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 4 ;
		lv2:symbol "spike_threshold" ;
		lv2:name "Spike Threshold" ;
		lv2:default 20.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 40.0 ;
		units:unit units:db
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 5 ;
		lv2:symbol "spike_width" ;
		lv2:name "Spike Width" ;
		lv2:default 1.0 ;
		lv2:minimum 0.1 ;
		lv2:maximum 10.0 ;
		units:unit units:ms
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 6 ;
		lv2:symbol "notch_enable" ;
		lv2:name "Notch Filter Enable" ;
		lv2:default 0 ;
		lv2:minimum 0 ;
		lv2:maximum 1 ;
		lv2:portProperty lv2:toggled
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 7 ;
		lv2:symbol "notch_freq" ;
		lv2:name "Notch Frequency" ;
		lv2:default 50.0 ;
		lv2:minimum 20.0 ;
		lv2:maximum 500.0 ;
		units:unit units:hz
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 8 ;
		lv2:symbol "notch_q" ;
		lv2:name "Notch Q Factor" ;
		lv2:default 10.0 ;
		lv2:minimum 0.5 ;
		lv2:maximum 50.0
	] , [
		a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 9 ;
		lv2:symbol "clipped_samples" ;
		lv2:name "Clipped Samples" ;
		lv2:minimum 0 ;
		lv2:maximum 1000000
	] , [
		a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 10 ;
		lv2:symbol "detected_clicks" ;
		lv2:name "Detected Clicks" ;
		lv2:minimum 0 ;
		lv2:maximum 1000000
	] , [
		a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 11 ;
		lv2:symbol "avg_spike_length" ;
		lv2:name "Average Spike Length" ;
		lv2:minimum 0 ;
		lv2:maximum 10000
	] , [
		a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 12 ;
		lv2:symbol "avg_rms_db" ;
		lv2:name "Average Spike Ratio" ;
		lv2:minimum 0 ;
		lv2:maximum 100 ;
		units:unit units:db
	] , [
		a lv2:AudioPort ,
			lv2:InputPort ;
		lv2:index 13 ;
		lv2:symbol "in_l" ;
		lv2:name "Input L"
	] , [
		a lv2:AudioPort ,
			lv2:InputPort ;
		lv2:index 14 ;
		lv2:symbol "in_r" ;
		lv2:name "Input R"
	] , [
		a lv2:AudioPort ,
			lv2:OutputPort ;
		lv2:index 15 ;
		lv2:symbol "out_l" ;
		lv2:name "Output L"
	] , [
		a lv2:AudioPort ,
			lv2:OutputPort ;
		lv2:index 16 ;
		lv2:symbol "out_r" ;
		lv2:name "Output R"
	] .
